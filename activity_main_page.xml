<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.android.com.bloodbank.main_page">

    <Button
        android:id="@+id/mapbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_a_donation_center"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="410dp"
        tools:ignore="MissingConstraints"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/profilebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/mapbutton"
        android:layout_toEndOf="@+id/mapbutton"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/descriptiontitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/benefits_of_donating"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="124dp"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/description"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/description"
        android:layout_width="273dp"
        android:layout_height="256dp"
        android:text="@string/it_feels_great_to_donate_nyou_get_free_juice_and_delicious_cookies_nit_s_something_you_can_spare_most_people_have_blood_to_spare_yet_there_is_still_not_enough_to_go_around_nyou_will_help_ensure_blood_is_on_the_shelf_when_needed_most_people_don_t_think_they_ll_ever_need_blood_but_many_do_nyou_will_be_someone_s_hero_in_fact_you_could_help_save_more_than_one_life_with_just_one_donation"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="154dp"
        android:layout_above="@+id/mapbutton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/android_background"
        android:layout_marginBottom="61dp"
        android:layout_above="@+id/descriptiontitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription=""
        tools:ignore="ContentDescription" />
</RelativeLayout>
